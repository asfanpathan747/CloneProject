$(window).scroll(function() {
    if ($(window).scrollTop() > 100) {
        
        $(".contactxt").hide(500);
        $(".cont_options i").css("margin-right", "0");
        $(".cont_options").css({"padding": "10px 14px"});
        
    }
    else {
        
        $(".contactxt").show(500);
        $(".cont_options i").css("margin-right", "8px");
        
        
        
    }
});


